extends ../layout

block content
  h1= project.title
  p
    strong Opis:
    |  #{project.description || '-'}
  p
    strong Cijena:
    |  #{project.price != null ? project.price.toFixed(2) : '-'}
  p
    strong Obavljeni poslovi:
    |  #{project.completedTasks}
  p
    strong Početak:
    |  #{project.startDate ? project.startDate.toDateString() : '-'}
  p
    strong Završetak:
    |  #{project.endDate ? project.endDate.toDateString() : '-'}

  hr
  h3 Članovi tima
  if project.team.length
    ul.list-group
      each member, idx in project.team
        li.list-group-item
          span #{member.name} (#{member.role || 'uloga'}) — #{member.email || '-'}
          form(action=`/projects/${project._id}/team/${idx}?_method=DELETE`, method="post", style="display:inline; float:right")
            button.btn.btn-sm.btn-danger(type="submit") Ukloni
  else
    p Nema aktivnih članova tima.

  h4 Dodaj člana tima
  form(method="post", action=`/projects/${project._id}/team`)
    .form-row
      .form-group.col-md-4
        input.form-control(type="text", name="name", placeholder="Ime i prezime", required)
      .form-group.col-md-4
        input.form-control(type="text", name="role", placeholder="Uloga")
      .form-group.col-md-4
        input.form-control(type="email", name="email", placeholder="Email")
    button.btn.btn-primary(type="submit") Dodaj
    a.btn.btn-secondary(href="/projects") Natrag
    a.btn.btn-outline-secondary(href=`/projects/${project._id}/edit`) Uredi